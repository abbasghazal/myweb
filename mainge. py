        <script>
            // نظام الصفحات المتعددة (SPA)
            function switchPage(url) {
                // التمرير إلى أعلى الصفحة
                window.scrollTo(0, 0);
            }
            
            // إعداد الأحداث عند تحميل الصفحة
            document.addEventListener('DOMContentLoaded', () => {
                // إعداد أحداث الروابط
                document.querySelectorAll('.nav-link').forEach(link => {
                    link.addEventListener('click', (e) => {
                        // تحديث الروابط النشطة في القائمة
                        document.querySelectorAll('.nav-link').forEach(lnk => {
                            lnk.classList.remove('active');
                        });
                        link.classList.add('active');
                        
                        // إغلاق القائمة في حالة الجوال
                        const navLinks = document.querySelector('.nav-links');
                        if (navLinks.classList.contains('active')) {
                            navLinks.classList.remove('active');
                            const menuToggleIcon = document.querySelector('.menu-toggle i');
                            menuToggleIcon.classList.toggle('fa-bars');
                            menuToggleIcon.classList.toggle('fa-times');
                        }
                    });
                });
                
                // إعداد أحداث الأزرار في الصفحة الرئيسية
                document.getElementById('projects-btn').addEventListener('click', (e) => {
                    e.preventDefault();
                    document.querySelectorAll('.nav-link').forEach(lnk => {
                        lnk.classList.remove('active');
                    });
                    document.querySelector('a[href="{% url 'projects' %}"]').classList.add('active');
                });
                
                document.getElementById('contact-btn').addEventListener('click', (e) => {
                    e.preventDefault();
                    document.querySelectorAll('.nav-link').forEach(lnk => {
                        lnk.classList.remove('active');
                    });
                    document.querySelector('a[href="{% url 'contact' %}"]').classList.add('active');
                });
                
                // حدث للشعار للرجوع للصفحة الرئيسية
                document.getElementById('logo').addEventListener('click', (e) => {
                    document.querySelectorAll('.nav-link').forEach(lnk => {
                        lnk.classList.remove('active');
                    });
                    document.querySelector('a[href="{% url 'home' %}"]').classList.add('active');
                });
                
                // إعداد القائمة المتنقلة
                const menuToggle = document.querySelector('.menu-toggle');
                const navLinks = document.querySelector('.nav-links');
                
                menuToggle.addEventListener('click', () => {
                    navLinks.classList.toggle('active');
                    const menuToggleIcon = menuToggle.querySelector('i');
                    menuToggleIcon.classList.toggle('fa-bars');
                    menuToggleIcon.classList.toggle('fa-times');
                });
                
                // إعداد إرسال النموذج
                const contactForm = document.getElementById('contactForm');
                if (contactForm) {
                    contactForm.addEventListener('submit', (e) => {
                        e.preventDefault();
                        alert('تم إرسال رسالتك بنجاح! سأتواصل معك قريباً.');
                        contactForm.reset();
                    });
                }
                
                // إعداد رسوم متحركة للعناصر عند الظهور
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add('show');
                        }
                    });
                }, { threshold: 0.1 });

                document.querySelectorAll('.skill-card, .project-card, .stat-box').forEach(el => {
                    observer.observe(el);
                });
            });
        </script>
    </body>
    </html>
    """,
    
